@model Lession1.Models.Book
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<form method="POST" enctype="multipart/form-data">
    <div class="form-group">
        <lable>Tên sách</lable>
        <input type="text" class="form-control" asp-for="Title" />
    </div>

    <div class="form-group">
        <lable asp-for="AuthorId">Tác giả</lable>
        <select asp-for="AuthorId" class="form-control" asp-item="@ViewBag.authors">
            <option value="">Chọn tác giả</option>
        </select>
    </div>
    
    <div class="form-group">
        <lable asp-for="GenreId">Thể loại</lable>
        <select asp-for="GenreId" class="form-control" asp-item="@ViewBag.genres">
            <option value="">Chọn thể loại</option>
        </select>
    </div>
    <div class="form-group">
        <lable asp-for="Price">Giá sách</lable>
        <input type="text" class="form-control" asp-for="Price" />
    </div>
    <div class="form-group">
        <lable asp-for="TotalPage">Tổng số trang</lable>
        <input type="text" class="form-control" asp-for="TotalPage" />
    </div>
    <div class="form-group">
        <lable asp-for="Image">Hình Ảnh</lable>
        <input type="text" class="form-control" asp-for="Image" />
    </div>
    <div class="form-group">
        <lable asp-for="Sumary">Giới thiệu ngắn</lable>
        <input type="text" class="form-control" asp-for="Sumary" />
    </div>
    <button type="submit">Lưu lại </button>
</form>

